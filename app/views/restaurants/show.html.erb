<div class="container mt-3">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: 'btn btn-secondary text-decoration-none mt-3 mb-3' %>
  <p>Reviews:</p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= "#{review.rating}/5" %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Back to list", restaurants_path, class: 'btn btn-secondary text-decoration-none mt-3' %>
</div>
